
<table class="table table-striped sortable" id="liste_cat">
	<thead>
		<tr>
			<td><strong>#</strong></td>
			<td><strong>Image</strong></td>
			<td><strong>Libelle</strong></td>
		</tr>
	</thead>
	<tbody>
		{% for produit in pagination %}
		<tr>
			<td>{{ produit.id }}</td>
			<td><img width="100" height="100"
				src="{{ asset('upload/'~produit.id~"/small/"~produit.photoPrincipale) }}"
				alt="" class="img-thumbnail" /></td>
			<td>
				<div class="row">
					<div class="col-md-4">{{ produit.libelle }}</div>
					<div class="col-md-2">
						<a href="{{ path('Maj_produit', {'id' : produit.id}) }}">Modifier</a>
					</div>
					<div class="col-md-2">
						<a href="{{ path('Gal_produit', {'id' : produit.id}) }}">Galerie photos</a>
					</div>
					<div class="col-md-2">
						<a href="{{ path('Info_supp_produit', {'id' : produit.id}) }}">Info	supp.</a>
					</div>
					<div class="col-md-2">
						<a onclick="spr('{{ path('Spr_produit', {'id' : produit.id}) }}')">Supprimer</a>
					</div>
				</div>
			</td>
		</tr>
		{% endfor %}
	</tbody>
</table>
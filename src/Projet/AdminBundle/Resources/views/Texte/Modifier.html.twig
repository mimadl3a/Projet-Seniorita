{% extends 'ProjetAdminBundle:Layout:base.html.twig' %}

{% block files %}
	{{ parent() }}
{% endblock %}
{% block signin %}{% endblock %}
{% block body %}
	{{ parent() }}
	<div class="container-fluid">
	      <div class="row">
			<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
			
				<h3>Mettre a jour le contenu de la page :<br><strong>{{ texte.page }}</strong></h3>
				{% for flashMessage in app.session.flashbag.get('erreur') %}
				    <div class="alert bg-warning">
				      <button type="button" class="close" data-dismiss="alert">&times;</button>
				      <strong>{{ flashMessage }}</strong>
				    </div>
				{% endfor %}
			
			</div>
		</div>
	
			<div class="row">
				<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
				<form action="{{ path('Maj_texte',{'texte':texte.page}) }}" method="post"{{ form_enctype(form) }} class="form">
				<div class="form-group">
					<div class="control-group">
						<label class="col-sm-2 control-label" for="inputText">{{ form_label(form.contenu, "Entrez le contenu: ") }}</label>
						<div class="col-sm-10">{{ form_widget(form.contenu,{'attr':{'class':'col-lg-8'}}) }}</div>
						<p class="help-block col-sm-10">Mettez a jour le contenu.</p>
					</div>
					
					
					{{ form_widget(form.page) }}
					
					{{ form_errors(form) }}
					{{ form_rest(form) }}
					<div class="form-group">
					    <div class="col-sm-offset-2 col-sm-10">
					      <input type="submit" class="btn btn-primary" value="Mettre a jour" />
					    </div>
					  </div>
					
				</div>
				</form>
			</div>
		</div>
	
{% endblock %}
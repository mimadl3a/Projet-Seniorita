{% extends 'ProjetAdminBundle:Layout:base.html.twig' %}

{% block body %}
	{{ parent() }}
	<div class="container">
		<h2>Liste des photos du Produit,<small> Nombre egal a: {{ liste|length }}</small></h2>
		<a href="{{ path('Ajout_produit') }}" class="btn btn-info">Ajouter nouvelle photo</a>
		
		{% for flashMessage in app.session.flashbag.get('erreur') %}
		    <div class="alert bg-warning">
		      <button type="button" class="close" data-dismiss="alert">&times;</button>
		      <strong>{{ flashMessage }}</strong>
		    </div>
		{% endfor %}
		
	</div>
	<div class="container">
		<br />
		<div class="panel panel-default">
		  <!-- Default panel contents -->
		  <div class="panel-heading">Liste des photos</div>
		  <div class="panel-body">
		    <p>Veuillez voir le tableau ci-dessous, et utiliser les controles a cote de chaque photo.</p>
		  </div>
		
		<div id="contenu">			
			<table class="table table-striped sortable" id="liste_prd">
				<thead>
					<tr>
						<td><strong>#</strong></td>
						<td><strong>Image</strong></td>
						<td><strong>Libelle</strong></td>
					</tr>
				</thead>
				<tbody>
					{% for photo in liste %}
						<tr>
							<td>{{ photo.id }}</td>
							<td>
								<img width="100" height="100" src="{{ asset('upload/'~produit.id~"/small/"~photo.source) }}" alt="" class="img-thumbnail" />
							</td>
							<td>
								<div class="row">
									<div class="col-md-4">
										{{ produit.libelle }}
									</div>
									<div class="col-md-2">
										<a href="{{ path('Maj_produit', {'id' : photo.id}) }}">Modifier</a>
									</div>
									<div class="col-md-2">
										<a href="{{ path('Gal_produit', {'id' : photo.id}) }}">Galerie photos</a>
									</div>
									<div class="col-md-2">
										<a href="{{ path('Info_supp_produit', {'id' : photo.id}) }}">Info supp.</a>
									</div>
									<div class="col-md-2">
										<a onclick="spr('{{ path('Spr_produit', {'id' : photo.id}) }}')">Supprimer</a>
									</div>
								</div>
							</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
		</div>
		
		
	</div>
	
{% endblock %}

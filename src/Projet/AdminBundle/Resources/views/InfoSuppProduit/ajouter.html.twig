{% extends 'ProjetAdminBundle:Layout:base.html.twig' %}

{% block body %}
	
	{{ parent() }}
	
	<div class="container">
		<h3>Modification/Ajout des informations supplementaires du produit : <small>{{ id_produit }}</small></h3>
		<a href="{{ path('Info_supp_produit',{'id':id_produit}) }}" class="btn btn-warning">Retour</a>
		{% for flashMessage in app.session.flashbag.get('erreur') %}
		    <div class="alert bg-warning">
		      <button type="button" class="close" data-dismiss="alert">&times;</button>
		      <strong>{{ flashMessage }}</strong>
		    </div>
		{% endfor %}
	
	</div>
	
	<div class="container">	
		<form action="{{ path('Ajouter_info_supp_produit',{'id_prod': id_produit}) }}" method="post"{{ form_enctype(form) }} class="form">
		<div class="form-group">
			<div class="control-group">
				<label class="col-sm-2 control-label" for="inputText">{{ form_label(form.couleur, "Entrez la couleur: ") }}</label>
				<div class="col-sm-10">{{ form_widget(form.couleur,{'attr':{'class':'col-lg-4'}}) }}</div>
				<p class="help-block col-sm-10">Entrez la couleur.</p>
			</div>
			<div class="control-group">
				<label class="col-sm-2 control-label" for="inputText">{{ form_label(form.taille, "Entrez la taille: ") }}</label>
				<div class="col-sm-10">{{ form_widget(form.taille,{'attr':{'class':'col-lg-4'}}) }}</div>
				<p class="help-block col-sm-10">Entrez la taille.</p>
			</div>
			<div class="control-group">
				<label class="col-sm-2 control-label" for="inputText">{{ form_label(form.quantite, "Entrez la quantite: ") }}</label>
				<div class="col-sm-10">{{ form_widget(form.quantite,{'attr':{'class':'col-lg-4'}}) }}</div>
				<p class="help-block col-sm-10">Entrez la quantite.</p>
			</div>
			{{ form_errors(form) }}
			{{ form_rest(form) }}
			<div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			      <input type="submit" class="btn btn-primary" />
			    </div>
			  </div>
			
		</div>
		</form>
				
	</div>
	
	
	
	
{% endblock %}
